extends ../layout

block content
	include partials/mainnavbar.jade
	div(class="container")
		div(class="row")
			div(class="col-md-12")
				br
				h3= data.title
				h5
					span= data.company 
					span - 
					span= data.city 
					span , 
					span= data.state
		br
		div(class="row")
			div(class="col-md-12")
				p= data.shortDetails
				br
				p= data.details
		hr
		div(class="row")
			div(class="col-md-12")
				div(id="form")
					form(method="POST" action=`/static/application/${data.id}`)
						h2(class="text-center") Application for 
							span= data.title
						if message
							div(id="message")
								h4= message
						br
						label(for="name") Full Name
						input(class="form-control" type="text" name="fullname" placeholder="ex. John Doe" required)
						br
						label(for="email") Email
						input(class="form-control" type="email" name="email" placeholder="ex. JohnDoe@example.com" required)
						br
						label(for="phonenumber") Phone Number
						input(class="form-control" type="text" name="phonenumber" placeholder="ex. 123-456-7899" required)
						br
						label(for="email") Paste Your Resume Here
						textarea(class="form-control" type="text" name="details" required)
						br
						button(class="btn btn-outline-danger btn-lg btn-block") Send Resume
	include partials/footer.jade