extends layout

block content
	include static/partials/mainnavbar.jade
	div(class="container")
		div(id="auth")
			h2(class="text-center") Login
			form(method="POST" action="/users/login")
				p= message
				div(class="form-group")
					label(for="username") Username
					input(type="text" class="form-control" id="username" aria-describedby="emailHelp" name="username" placeholder="Enter Username" required)
				div(class="form-group")
					label(for="password") Password
					input(type="password" class="form-control" name="password" id="password" placeholder="Password" required)
				button(type="submit" class="btn btn-primary") Submit
	include static/partials/footer.jade