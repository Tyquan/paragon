extends layout

block content
	include static/partials/mainnavbar.jade
	div(class="container")
		div(id="auth")
			h2(class="text-center") Signup
			form(method="POST" action="/users/signup")
				p= message
				div(class="form-group")
					label(for="username") Username
					input(type="text" class="form-control" id="username" aria-describedby="emailHelp" name="username" placeholder="Enter Username" required)
					small(id="emailHelp" class="form-text text-muted") We will never share your email with anyone else.
				div(class="form-group")
					label(for="password") Password
					input(type="password" name="password" class="form-control" id="password" placeholder="Enter Password" required)
				button(type="submit" class="btn btn-primary") Submit
	include static/partials/footer.jade